<AddCtrl xmlns="com.ohlair.controller.messages.*" xmlns:mx="http://www.adobe.com/2006/mxml">

	<mx:Form width="100%" height="100%" indicatorGap="0" paddingLeft="0" paddingRight="0">
		<mx:FormItem width="100%" height="80">
			<mx:TextArea id="txta_body" width="100%" height="100%" fontSize="14"
				click="bodyClick()" color="#000000"/>
		</mx:FormItem>
		<mx:FormItem paddingTop="0" width="100%" horizontalAlign="right">
			<mx:Button label="Post" id="btn_submit"  styleName="button" click="submit()"
				buttonMode="true" useHandCursor="true" enabled="{txta_body.enabled}"/>
		</mx:FormItem>
	</mx:Form>

</AddCtrl>