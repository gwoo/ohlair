<mx:Panel xmlns:mx="http://www.adobe.com/2006/mxml"
	width="300" height="200">

	<mx:VBox verticalGap="0" width="100%" height="100%">
				
		<mx:TextArea htmlText="{data.title}" width="100%" height="100%" editable="false" fontSize="16"/>
		
		<mx:TextArea htmlText="{data.header}" width="100%"  height="11"
			textAlign="right" editable="false" enabled="false" fontSize="12" styleName="header"/>
		
		<mx:HBox verticalAlign="middle" width="100%">	
			
			<mx:LinkButton label="{data.author}" styleName="author"
				click="navigateToURL(new URLRequest(data.url))"  
				useHandCursor="true" buttonMode="true"/>
			
			<mx:Spacer width="100%" />	
				
			<mx:Label text="{data.pubDate}" styleName="date"/>
				
		</mx:HBox>

	</mx:VBox>
	
</mx:Panel>