<FakeApp xmlns="com.ohlair.*" xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute"
	xmlns:fx="com.fx.*" xmlns:messages="com.ohlair.view.messages.*" xmlns:tools="com.ohlair.view.tools.*">
	<mx:Script></mx:Script>

	<mx:Style source="assets/styles/darkroom.css"/>
	<mx:Style source="assets/styles/ohlair.css"/>

	<mx:Canvas width="100%" height="70" verticalScrollPolicy="off">

		<mx:HBox horizontalGap="0" paddingTop="39" paddingLeft="10" paddingRight="10">
			<mx:Label text="Ohlair" styleName="h1"/>
			<mx:Label text="(alpha)" styleName="em"/>
		</mx:HBox>
		
		<mx:HBox top="0" right="10" >
			<mx:LinkButton label="Settings" fontSize="10" click="openSettings()" styleName="headerA"/>
		</mx:HBox>
	</mx:Canvas>

	<mx:TabNavigator id="reader" width="100%" height="90%" right="10" left="10" bottom="20" top="40" change="tabChange(event)"
		buttonMode="true" useHandCursor="true" borderStyle="solid" horizontalAlign="right">

		<messages:View label="Journal" width="100%" height="100%" />

		<tools:View	label="Tools" width="100%" height="100%" />

	</mx:TabNavigator>

